<%= form_with model: [@question, @answer], local: true do |f| %>
  <%= render "shared/errors", resource: @answer %>

  <%= f.label :body %>
  <%= f.text_field :body, id: :answer_body %>
  <br>

  <%= f.label :correct %>
  <%= f.check_box :correct, id: :answer_correct %>
  <br>

  <%= f.submit %>
<% end %>
